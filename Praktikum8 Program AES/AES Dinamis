# ================= RCON (Diubah ke Hexa) =================
RCON = [0x01,0x02,0x04,0x08,0x10,0x20,0x40,0x80,0x1B,0x36]

def pad_pkcs7(text):
    data = [ord(c) for c in text]
    pad_len = 16 - (len(data) % 16)
    return data + [pad_len] * pad_len

def unpad_pkcs7(data):
    return data[:-data[-1]]

def bytes_to_matrix(b):
    return [b[i:i+4] for i in range(0, 16, 4)]

def matrix_to_bytes(m):
    return [b for r in m for b in r]

def print_matrix(label, m, text_widget):
    text_widget.insert(tk.END, f"{label}:\n", "lilac")
    for row in m:
        text_widget.insert(tk.END, ' '.join(f'{x:02x}' for x in row) + '\n', "lilac")
    text_widget.insert(tk.END, '\n')

def add_round_key(s, k, text_widget):
    result = [[a ^ b for a, b in zip(x, y)] for x, y in zip(s, k)]
    print_matrix("After AddRoundKey", result, text_widget)
    return result

def sub_bytes(s, text_widget):
    result = [[SBOX[b] for b in row] for row in s]
    print_matrix("After SubBytes", result, text_widget)
    return result

def inv_sub_bytes(s, text_widget):
    result = [[INV_SBOX[b] for b in row] for row in s]
    print_matrix("After InvSubBytes", result, text_widget)
    return result

def shift_rows(s, text_widget):
    result = [
        s[0],
        s[1][1:] + s[1][:1],
        s[2][2:] + s[2][:2],
        s[3][3:] + s[3][:3],
    ]
    print_matrix("After ShiftRows", result, text_widget)
    return result

def inv_shift_rows(s, text_widget):
    result = [
        s[0],
        s[1][-1:] + s[1][:-1],
        s[2][-2:] + s[2][:-2],
        s[3][-3:] + s[3][:-3],
    ]
    print_matrix("After InvShiftRows", result, text_widget)
    return result

def xtime(a):
    return ((a << 1) ^ 0x1B) & 0xFF if a & 0x80 else (a << 1)

def mix_single_column(c):
    a = c
    b = [xtime(x) for x in a]
    return [
        b[0] ^ a[3] ^ a[2] ^ b[1] ^ a[1],
        b[1] ^ a[0] ^ a[3] ^ b[2] ^ a[2],
        b[2] ^ a[1] ^ a[0] ^ b[3] ^ a[3],
        b[3] ^ a[2] ^ a[1] ^ b[0] ^ a[0],
    ]

def mix_columns(s, text_widget):
    cols = list(zip(*s))
    mixed = [mix_single_column(list(c)) for c in cols]
    result = [list(col) for col in zip(*mixed)]
    print_matrix("After MixColumns", result, text_widget)
    return result

def mul(a, b):
    r = 0
    for _ in range(8):
        if b & 1: r ^= a
        h = a & 0x80
        a = (a << 1) & 0xFF
        if h: a ^= 0x1B
        b >>= 1
    return r

def inv_mix_single_column(c):
    return [
        mul(c[0], 14) ^ mul(c[1], 11) ^ mul(c[2], 13) ^ mul(c[3], 9),
        mul(c[0], 9) ^ mul(c[1], 14) ^ mul(c[2], 11) ^ mul(c[3], 13),
        mul(c[0], 13) ^ mul(c[1], 9) ^ mul(c[2], 14) ^ mul(c[3], 11),
        mul(c[0], 11) ^ mul(c[1], 13) ^ mul(c[2], 9) ^ mul(c[3], 14),
    ]

def inv_mix_columns(s, text_widget):
    cols = list(zip(*s))
    mixed = [inv_mix_single_column(list(c)) for c in cols]
    result = [list(c) for c in zip(*mixed)]
    print_matrix("After InvMixColumns", result, text_widget)
    return result

def key_expansion(key, key_len):
    if key_len == 128:
        nk = 4
        nr = 10
    elif key_len == 192:
        nk = 6
        nr = 12
    elif key_len == 256:
        nk = 8
        nr = 14
    else:
        raise ValueError("Invalid key length")
    
    w = [key[i:i+4] for i in range(0, len(key), 4)]
    for i in range(nk, 4*(nr+1)):
        t = w[i-1]
        if i % nk == 0:
            t = t[1:] + t[:1]
            t = [SBOX[x] for x in t]
            t[0] ^= RCON[(i // nk) - 1]
        elif nk > 6 and i % nk == 4:
            t = [SBOX[x] for x in t]
        w.append([t[j] ^ w[i - nk][j] for j in range(4)])
    return [w[i:i+4] for i in range(0, 4*(nr+1), 4)], nr

def aes_encrypt_block(b, rk, nr, text_widget):
    s = bytes_to_matrix(b)
    text_widget.insert(tk.END, "Initial State:\n", "lilac")
    print_matrix("State", s, text_widget)
    s = add_round_key(s, rk[0], text_widget)
    for r in range(1, nr):
        text_widget.insert(tk.END, f"\nRound {r}:\n", "lilac")
        s = sub_bytes(s, text_widget)
        s = shift_rows(s, text_widget)
        s = mix_columns(s, text_widget)
        s = add_round_key(s, rk[r], text_widget)
    text_widget.insert(tk.END, f"\nFinal Round {nr}:\n", "lilac")
    s = sub_bytes(s, text_widget)
    s = shift_rows(s, text_widget)
    s = add_round_key(s, rk[nr], text_widget)
    return matrix_to_bytes(s)

def aes_decrypt_block(b, rk, nr, text_widget):
    s = bytes_to_matrix(b)
    text_widget.insert(tk.END, "Initial State:\n", "lilac")
    print_matrix("State", s, text_widget)
    s = add_round_key(s, rk[nr], text_widget)
    for r in range(nr-1, 0, -1):
        text_widget.insert(tk.END, f"\nRound {nr-r}:\n", "lilac")
        s = inv_shift_rows(s, text_widget)
        s = inv_sub_bytes(s, text_widget)
        s = add_round_key(s, rk[r], text_widget)
        s = inv_mix_columns(s, text_widget)
    text_widget.insert(tk.END, f"\nFinal Round {nr}:\n", "lilac")
    s = inv_shift_rows(s, text_widget)
    s = inv_sub_bytes(s, text_widget)
    s = add_round_key(s, rk[0], text_widget)
    return matrix_to_bytes(s)

def aes_encrypt(plaintext, key, key_len, text_widget):
    pb = pad_pkcs7(plaintext)
    kb = [ord(c) for c in key]
    kb = (kb + [0] * (key_len // 8))[:key_len // 8]
    rk, nr = key_expansion(kb, key_len)
    cipher = []
    for i in range(0, len(pb), 16):
        text_widget.insert(tk.END, f"\nEncrypting block {i//16 + 1}:\n", "lilac")
        cipher += aes_encrypt_block(pb[i:i+16], rk, nr, text_widget)
    return cipher

def aes_decrypt(cipher, key, key_len, text_widget):
    kb = [ord(c) for c in key]
    kb = (kb + [0] * (key_len // 8))[:key_len // 8]
    rk, nr = key_expansion(kb, key_len)
    dec = []
    for i in range(0, len(cipher), 16):
        text_widget.insert(tk.END, f"\nDecrypting block {i//16 + 1}:\n", "lilac")
        dec += aes_decrypt_block(cipher[i:i+16], rk, nr, text_widget)
    return ''.join(chr(x) for x in unpad_pkcs7(dec))

def encrypt_action():
    plaintext = plaintext_entry.get()
    key = key_entry.get()
    key_len = int(key_len_var.get())
    output_text.delete(1.0, tk.END)
    try:
        cipher = aes_encrypt(plaintext, key, key_len, output_text)
        output_text.insert(tk.END, f"\nCiphertext (hex): {' '.join(f'{x:02x}' for x in cipher)}\n", "lilac")
    except Exception as e:
        output_text.insert(tk.END, f"Error: {str(e)}\n", "lilac")

def decrypt_action():
    cipher_hex = cipher_entry.get()
    key = key_entry.get()
    key_len = int(key_len_var.get())
    output_text.delete(1.0, tk.END)
    try:
        cipher = [int(x, 16) for x in cipher_hex.split()]
        dec_text = aes_decrypt(cipher, key, key_len, output_text)
        output_text.insert(tk.END, f"\nDecrypted: {dec_text}\n", "lilac")
    except Exception as e:
        output_text.insert(tk.END, f"Error: {str(e)}\n", "lilac")

# GUI Setup
root = tk.Tk()
root.title("AES Encryption/Decryption with Lilac Theme")
root.configure(bg='#E6E6FA')  # Lilac background

# Input fields
tk.Label(root, text="Plaintext:", bg='#E6E6FA', fg='#8B008B').grid(row=0, column=0, sticky=tk.W)
plaintext_entry = tk.Entry(root, width=50)
plaintext_entry.grid(row=0, column=1)

tk.Label(root, text="Key:", bg='#E6E6FA', fg='#8B008B').grid(row=1, column=0, sticky=tk.W)
key_entry = tk.Entry(root, width=50)
key_entry.grid(row=1, column=1)

tk.Label(root, text="Key Length:", bg='#E6E6FA', fg='#8B008B').grid(row=2, column=0, sticky=tk.W)
key_len_var = tk.StringVar(value="128")
key_len_combo = ttk.Combobox(root, textvariable=key_len_var, values=["128", "192", "256"], state="readonly")
key_len_combo.grid(row=2, column=1, sticky=tk.W)

tk.Label(root, text="Ciphertext (hex for decrypt):", bg='#E6E6FA', fg='#8B008B').grid(row=3, column=0, sticky=tk.W)
cipher_entry = tk.Entry(root, width=50)
cipher_entry.grid(row=3, column=1)

# Buttons
encrypt_button = tk.Button(root, text="Encrypt", command=encrypt_action, bg='#DDA0DD', fg='#8B008B')
encrypt_button.grid(row=4, column=0, pady=10)

decrypt_button = tk.Button(root, text="Decrypt", command=decrypt_action, bg='#DDA0DD', fg='#8B008B')
decrypt_button.grid(row=4, column=1, pady=10)

# Output area
output_text = scrolledtext.ScrolledText(root, width=80, height=30, bg='#F8F8FF', fg='#8B008B')
output_text.grid(row=5, column=0, columnspan=2, pady=10)
output_text.tag_configure("lilac", foreground="#8B008B")

root.mainloop()
